@model IEnumerable<LoanMangSys.Models.tblUser>

@{
    ViewBag.Title = "Index";
}

<h2>User's Registered in Loan Management System</h2>
<style>
    
        h2{
              text-align:center;
              font-style:bold;
              color:red
              
          }
    p {
        text-align:center
    }
    
</style>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Income)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Income)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MobileNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
   
    <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.UserName }, new { @class = "btn btn-primary" }) |*@
        @Html.ActionLink("Details", "Details", new { id = item.UserName }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.UserName }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
<p>
    @Html.ActionLink("Home", "AdminDashboard", "Home", null, new { @class = "btn btn-primary" })
</p>
